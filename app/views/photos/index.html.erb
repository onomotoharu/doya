<h1>Listing photos</h1>

<table border=0>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.image.url(:medium) %></td>
        <td>@<%= photo.user.username %></td>
        <td><%= raw photo.tags.map { |t| link_to t.name, tag_path(t.id) }.join(', ') %></td>
        <td id="like<%= photo.id%>"><p><%= photo.like%> likes</p></td>
        
        <td>

        <%if user_signed_in? %>
        <input type="button" class="like" name="photos,<%= photo.id %>" value="いいね!"/></input>
        <% end %>

        </td>
        <td>
        <%if user_signed_in? %>
         <%= link_to 'Show', photo %></td>
        <% end %>
        <td>
        <%if user_signed_in? && current_user.id == photo.user.id %>
          <%= link_to 'Edit', edit_photo_path(photo) %></td>
        <% end %>
        <td> 
        <%if user_signed_in? && current_user.id == photo.user.id %>
          <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>

<script>
  $("input.like").click(function(){
  target = $(this).attr("name").split(",");
  uri = "/"+ target[0] + "/" +  target[1] + "/like";
  $.post(uri, function(json){
    $("#like"+target[1]).html(String(json.like) + " likes")
  });
})

</script>